{
  "manifest_version": 2,

  "name": "MentalNote Chrome-Extension",
  "description": "make process of adding URLs to MentalNote in Chrome easier",
  "version": "1.3",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "add link to MentalNote"
  },

  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
      "page": "options.html",
      "chrome_style": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
