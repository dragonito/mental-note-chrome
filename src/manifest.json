{
  "manifest_version": 2,

  "name": "MentalNote Chrome-Extension",
  "description": "make process of adding URLs to MentalNote in Chrome easier",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "add link to MentalNote"
  },

  "options_ui": {
      "page": "options.html",
      "chrome_style": true
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
